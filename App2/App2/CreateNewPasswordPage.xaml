<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.CreateNewPasswordPage"
             BackgroundColor= "#a80000">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Entry x:Name="newPassword" Placeholder="Enter new password" IsPassword="True" />
            <Entry x:Name="newPasswordConfirm" Placeholder="Confirm new password" IsPassword="true" />
            <Button x:Name="newPasswordButton" Text="Set password" Clicked="LoginButton_Clicked" />
            <Label x:Name="errorMessage" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>